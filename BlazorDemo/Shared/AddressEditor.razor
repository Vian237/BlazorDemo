    <label>Name:</label>
    <div>
        <input @ref="startName" @bind="@Address.Name" />
    </div>
</div>

<div class="form-field">
    <label>Street:</label>
    <div>
        <input @bind="@Address.Street" />
    </div>
</div>

<div class="form-field">
    <label>City:</label>
    <div>
        <input @bind="@Address.City" />
    </div>
</div>

<div class="form-field">
    <label>Region:</label>
    <div>
        <input @bind="@Address.State" />
    </div>
</div>

<div class="form-field">
    <label>Postal code:</label>
    <div>
        <input @bind="@Address.ZipCode" />
    </div>
</div>