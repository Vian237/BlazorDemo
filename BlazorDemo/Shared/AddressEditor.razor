        <ValidationMessage For="@(() => Address.Street)" />
    </div>
</div>

<div class="form-field">
    <label>City:</label>
    <div>
        <InputText @bind-Value="Address.City" />
        <ValidationMessage For="@(() => Address.City)" />
    </div>
</div>

<div class="form-field">
    <label>Region:</label>
    <div>
        <InputText @bind-Value="Address.State" />
        <ValidationMessage For="@(() => Address.State)" />
    </div>
</div>

